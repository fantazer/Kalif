.menu-cat-product-title
	a
		font-family Arial
		font-size 14px
		font-weight 400
		text-transform uppercase
		color main-color
		position relative
	&:before
		content ''
		width: 0;
		height: 0;
		border-left: 4px solid transparent;
		border-right: 4px solid transparent;
		border-top: 6px solid main-color;
		position absolute
		right 10px
		top 50%	
		margin-top -4px
// ######### Navigation ##########
.menu-cat-product
	&:hover
		.first-lvl
			display block
			&:hover
				.second-lvl
					display block
					&:hover
						.three-lvl
							display block
							

.first-lvl,
.second-lvl,
.three-lvl
	position relative
	display none

.first-lvl 
	& > a
			text-decoration underline
.three-lvl
	a
		&:before
			content ''
			border 0px!important;
.menu-cat-product-sub
	position absolute
	top 55px
	left 0
	width 100%
	z-index 2000
	a
		color main-color
		padding 10px
		display inline-block
		width 100%
		position relative
		&:hover
			background main-color
			color white
			text-decoration none
			&:before
				content ''
				border-left: 8px solid white;
		&:before
			content ''
			width: 0;
			height: 0;
			border-top: 4px solid transparent;
			border-left: 6px solid main-color;
			border-bottom: 4px solid transparent;
			position absolute
			right 10px
			top 50%	
			margin-top -4px

.menu-cat-product-sub > .menu-cat-product-sub-el
	.menu-cat-product-sub-el
		right -215px
		position absolute
		top 0px
		width 100%
