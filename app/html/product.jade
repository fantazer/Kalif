									img(src="img/product-1.jpg", alt="")
								.analog-card-name Кальян Ager 1251rg 74 см
							a(href="#").analog-card-review отзывы(12)
							a(href="#").analog-card-but
								.analog-card-price 3525 руб.
								.analog-card-getText в корзину


	//Include footer
	include ./block_html/footer.jade

