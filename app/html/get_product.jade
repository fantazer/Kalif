<!DOCTYPE html>
html(lang="en")
	//Include header
	include ./block_html/head.jade
	include ./block_html/const.jade
body
		
	//Include Header
	include ./block_html/header.jade
	//Content
	.main-cont
		.content
			include ./block_html/breadcrumbs.jade
			.getProduct-wrap
				.part-title Оформление товара
				.getProduct-left

					.getProduct-left-title Состав заказа
					
					.getProduct-left-itog
						- for (var b = 0; b < 4; b++)
							.getProduct-left-itog-row
								.getProduct-left-itog-inf Название
								.getProduct-left-itog-inf 2 шт

					a(href="#").button-block Изменить состав заказа

					.getProduct-left-itog
						.getProduct-left-itog-row
							.getProduct-left-itog-inf Всего товаров
							.getProduct-left-itog-inf 8 шт
						.getProduct-left-itog-row
							.getProduct-left-itog-inf На общую сумму
							.getProduct-left-itog-inf 12 000 руб
						.getProduct-left-itog-row
							.getProduct-left-itog-inf Доставка
							.getProduct-left-itog-inf 350 руб
					.getProduct-footer Итого к оплате
					.getProduct-footer 12 350 руб.

					a(href="#").getProduct-back Вернуться в корзину

				//Right-part
				.getProduct-right
					form(action="")
						.getProduct-wraper
						.getProduct-title Заполните данные получателя
						.getProduct-form
							mixin formRow(name)
								.getProduct-form-row
									.getProduct-form-label #{name}
									.getProduct-form-row-input
										input(type="text")

							+formRow(' Ваше имя (ФИО) ')
							
							.getProduct-form-row.getProduct-form-row-phone
								.getProduct-form-label Мобильный телефон
								.getProduct-form-row-input
									input(type="text")
									input(type="text")

							+formRow(' Электронная почта ')
							+formRow(' Адрес доставки ')
							

							.getProduct-form-row.getProduct-form-row-time
								.getProduct-form-label Время доставки
								.getProduct-form-row-input
									span c
									select(name="")
										option 08:00
										option 08:00
										option 08:00
									span до
									select(name="")
										option 23:00
										option 23:00
										option 23:00

							.getProduct-form-bonus
								.getProduct-form-bonus-title Бонусная карта
								.getProduct-form-bonus-text Если у Вас есть бонусная карта нашего магазина, введите ее номер:
								input(type="text")
							.getProduct-form-bonus
								.getProduct-form-bonus-title Подарочный сертификат
								.getProduct-form-bonus-text Если у Вас есть подарочный сертификат нашего магазина, введите его номер:
								input(type="text")

							.getProduct-delivery
								.getProduct-delivery-title Способ доставки:
								.getProduct-delivery-type
									.getProduct-delivery-type-text
										input(type="checkbox")
										span Курьером по Москве
									.getProduct-delivery-type-val 350 руб.

								.getProduct-delivery-type
									.getProduct-delivery-type-text
										input(type="checkbox")
										span ЕМС Почта России
									.getProduct-delivery-type-val 350 руб.

								.getProduct-delivery-type
									.getProduct-delivery-type-text
										input(type="checkbox")
										span Забрать из магазина
									.getProduct-delivery-type-val 350 руб.

								.getProduct-delivery-type.getProduct-delivery-type-shop
									.getProduct-delivery-type-text
										input(type="checkbox")
										span Забрать из магазина новый магазин
									.getProduct-delivery-type-val 350 руб.

							.getProduct-pay
								.getProduct-pay-title Способ оплаты:
								.getProduct-pay-type
									input(type="checkbox")
									span Оплата наличными при получении
								.getProduct-pay-type
									input(type="checkbox")
									span Онлайн оплата через (Робокасса)
								.getProduct-pay-icon
									- for (var b = 0; b < 7; b++)
										.getProduct-icon-el
											img(src="img/icon-pay-#{b+1}.png", alt="")

							.getProduct-pay-title Комментарий к заказу:
							textarea#getProduct(name="", rows="10")
					
						.getProduct-but
							a(href="#").button-block Подтвердить заказ

	//Include footer
	include ./block_html/footer.jade

	//Include scripts
	include ./block_html/script.jade